{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "prettier"
  ],
  "plugins": ["prettier", "import"],
  "rules": {
    "no-unused-vars": "error",
    "no-undef": "off",
    "import/order": [
      "error",
      {
        "pathGroups": [
          {
            "pattern": "@/**",
            "group": "external",
            "position": "after"
          }
        ],
        "alphabetize": { "order": "asc", "caseInsensitive": false },
        "newlines-between": "always-and-inside-groups",
        "warnOnUnassignedImports": true
      }
    ]
  }
}
